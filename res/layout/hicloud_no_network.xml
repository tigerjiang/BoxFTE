<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/hicloud_no_network"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_vertical" >

    <RelativeLayout
        android:id="@+id/hicloud_no_network_inner"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="@dimen/info_side_margin"
        android:layout_marginRight="@dimen/info_side_margin"
        android:gravity="center_vertical"
        android:padding="@dimen/action_area_padding" >

        <ImageView
            android:id="@+id/imageview_done"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_gravity="left"
            android:src="@drawable/fte_icn_alert" />

        <TextView
            android:id="@+id/textview_not_connected"
            style="@style/Custom.Info.TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_gravity="left"
            android:layout_marginBottom="@dimen/small_margin"
            android:layout_marginLeft="@dimen/hicloud_text_margin"
            android:text="@string/str_hicloud_not_connected"
            android:textSize="@dimen/text_size_large" />

        <TextView
            android:id="@+id/textview_hicloud_no_network_explanation"
            style="@style/Custom.Info.TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_below="@id/textview_not_connected"
            android:layout_gravity="left"
            android:layout_marginBottom="@dimen/hicloud_text_margin"
            android:layout_marginLeft="@dimen/hicloud_text_margin"
            android:text="@string/str_hicloud_no_network_explanation"
            android:textSize="@dimen/text_size_medium" />
    </RelativeLayout>

</RelativeLayout>