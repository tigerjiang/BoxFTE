<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <style name="ApplicationStyle" parent="@android:style/Theme.DeviceDefault.NoActionBar.Fullscreen">
        <item name="android:buttonStyle">@style/Custom.Button</item>
    </style>

    <style name="Custom.Button" parent="android:style/Widget.DeviceDefault.Button">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">#f0f0f0</item>
        <item name="android:paddingTop">5dp</item>
    </style>

    <style name="Custom.Info.TextView" parent="android:style/Widget.DeviceDefault.TextView">
        <item name="android:textColor">#f0f0f0</item>
    </style>

    <style name="Custom.Info.TextViewWPadding" parent="Custom.Info.TextView">
        <item name="android:paddingLeft">@dimen/info_side_margin</item>
        <item name="android:paddingRight">@dimen/info_side_margin</item>
    </style>

